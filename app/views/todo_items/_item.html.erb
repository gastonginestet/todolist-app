<div id="<%= dom_id(todo_item) %>" class="flex mb-4 items-center">
  <%= form_with(model: [todo_list, todo_item], method: :patch, data: { turbo_frame: "todo_items" }, class: "flex items-center w-full") do |f| %>
    <%= f.check_box :completed, {
        checked: todo_item.completed,
        class: "mr-3 h-5 w-5 hover:ring-2 hover:ring-blue-400 hover:scale-110 transition-transform",
        onchange: "this.form.requestSubmit()"
      } %>
    <p class="flex-grow <%= 'line-through text-blue-500' if todo_item.completed %> text-gray-900"><%= todo_item.name %></p>
  <% end %>

  <%= button_to todo_list_todo_item_path(todo_list, todo_item), method: :delete,
    data: { turbo_frame: "todo_items"},
    class: "text-red-500 hover:text-white hover:bg-red-500 border border-red-500 rounded-full w-8 h-8 flex items-center justify-center ml-3" do %>
    âœ–
  <% end %>
</div>
