<%= form_with(model: [todo_list, todo_item]) do |form| %>
  <div class="flex mt-4">
    <%= form.text_field :name, placeholder: "Add Todo", class: "shadow appearance-none border rounded w-full py-2 px-3 mr-4 text-gray-700" %>
    <%= form.submit "Add", class: "shrink-0 p-2 border-2 rounded text-teal-500 border-teal-500 hover:text-white hover:bg-teal-500" %>
  </div>
<% end %>
