<div class="h-full w-full flex items-center justify-center bg-teal-50 font-sans min-h-screen">
  <div class="bg-white rounded shadow p-6 m-4 w-full lg:w-3/4 lg:max-w-lg">
    <!-- Back button -->
    <div class="mb-4">
      <%= link_to t("todo_lists.back"), todo_lists_path, class: "text-sm text-teal-600 hover:text-teal-800" %>
    </div>

    <div class="mb-4">
      <h1 class="text-gray-900 text-xl font-semibold"><%= @todolist.name %></h1>
    </div>

    <%= turbo_frame_tag "todo_items" do %>
      <div class="flex justify-between items-center mb-4">
        <%= button_to t("todo_lists.todo_items.complete_all"), complete_all_todo_list_path(@todolist), method: :patch,
          class: "text-sm text-green-600 hover:text-white hover:bg-green-600 border border-green-600 rounded px-3 py-1",
          data: { turbo_frame: "todo_items", turbo_confirm: "Do you want to mark all items as completed?" } %>

        <%= button_to t("todo_lists.todo_items.clear_completed"), clear_completed_todo_list_path(@todolist), method: :patch,
          class: "text-sm text-red-600 hover:text-white hover:bg-red-600 border border-red-600 rounded px-3 py-1",
          data: { turbo_frame: "todo_items" } %>
      </div>

      <% @todo_items.each do |item| %>
        <%= render partial: "todo_items/item", locals: { todo_item: item, todo_list: @todolist } %>
      <% end %>

      <div class="mt-4">
        <%= paginate @todo_items, theme: "tailwind" %>
      </div>
    <% end %>

    <%= turbo_frame_tag "todo_item_form" do %>
      <%= render partial: "todo_items/form", locals: { todo_list: @todolist, todo_item: TodoItem.new } %>
    <% end %>
  </div>
</div>
